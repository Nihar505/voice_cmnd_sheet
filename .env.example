# Database
DATABASE_URL="postgresql://user:password@localhost:5432/voice_sheets_db?schema=public"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# NextAuth.js
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID="your-google-oauth-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"

# Google Cloud Project (for Sheets API and Speech-to-Text)
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id"
GOOGLE_APPLICATION_CREDENTIALS="./credentials/service-account.json"

# OpenAI API (for intent parsing)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"

# Encryption (for storing OAuth tokens)
ENCRYPTION_KEY="your-32-character-encryption-key-here-change-in-prod"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Application Settings
NODE_ENV="development"
PORT=3000

# Logging
LOG_LEVEL="info"

# Google Sheets API Settings
MAX_SHEET_ROWS=10000
MAX_SHEET_COLUMNS=100

# Audio Settings
MAX_AUDIO_DURATION_SECONDS=60
SUPPORTED_AUDIO_FORMATS="audio/webm,audio/wav,audio/mp3"
